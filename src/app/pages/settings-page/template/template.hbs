<main class="main-content">
    <article class="main-content__article settings-article">
        <header class="settings-article__header settings-header">
            <h2 class="settings-header__title">Pomodoro settings</h2>
            <nav class="settings-header__navigation tabs">
                <a href="#settings" class="tabs__tab-link tabs__tab-link_active" data-query="settings">Pomodoros</a>
                <a href="#settings" class="tabs__tab-link" data-query="categories">Categories</a>
            </nav>
        </header>

        <section class="settings-article__section pomodoro-settings">
            <ul class="pomodoro-settings__list">
                <li class="pomodoro-settings__item single-setting" id="voter1" data-index="0">

                    <div class="single-setting__first-line">
                        <span class="single-setting__name">Work time</span>
                        <div class="single-setting__input-block">
                            <button class="single-setting__button single-setting__button_minus icon-minus"></button>
                            <button class="single-setting__button single-setting__button_add icon-add"></button>
                            <input type="text" class="single-setting__text-field" value="25" disabled>
                        </div>
                    </div>
                    <p class="single-setting__description">Please select a value between 15 and 25 <span class="single-setting__description-strong">minutes</span></p>
                </li>

                <li class="pomodoro-settings__item single-setting" id="voter2" data-index="1">

                    <div class="single-setting__first-line">
                        <span class="single-setting__name">Work iteration</span>
                        <div class="single-setting__input-block">
                            <button class="single-setting__button single-setting__button_minus icon-minus"></button>
                            <button class="single-setting__button single-setting__button_add icon-add"></button>
                            <input type="text" class="single-setting__text-field" value="5" disabled>
                        </div>
                    </div>
                    <p class="single-setting__description">Please select a value between 2 and 5 <span class="single-setting__description-strong">iterations</span></p>
                </li>

                <li class="pomodoro-settings__item single-setting" id="voter3" data-index="2">

                    <div class="single-setting__first-line">
                        <span class="single-setting__name">Short break</span>
                        <div class="single-setting__input-block">
                            <button class="single-setting__button single-setting__button_minus icon-minus"></button>
                            <button class="single-setting__button single-setting__button_add icon-add"></button>
                            <input type="text" class="single-setting__text-field" value="5" disabled>
                        </div>
                    </div>
                    <p class="single-setting__description">Please select a value between 3 and 5 <span class="single-setting__description-strong">minutes</span></p>
                </li>

                <li class="pomodoro-settings__item single-setting" id="voter4" data-index="3">

                    <div class="single-setting__first-line">
                        <span class="single-setting__name">Long break</span>
                        <div class="single-setting__input-block">
                            <button class="single-setting__button single-setting__button_minus icon-minus"></button>
                            <button class="single-setting__button single-setting__button_add icon-add"></button>
                            <input type="text" class="single-setting__text-field" value="30" disabled>
                        </div>
                    </div>
                    <p class="single-setting__description">Please select a value between 15 and 30 <span class="single-setting__description-strong">minutes</span></p>
                </li>
            </ul>
        </section>
    </article>

    <article class="main-content__article cycle">
        <h2 class="cycle__title">Your cycle</h2>
        <figure class="cycle__chart full-chart">
            <ul class="full-chart__list full-chart__list_top" id="cycle-list">
                <li class="full-chart__list-item">0m<div class="full-chart__list-item-point"></div></li>
                <li class="full-chart__list-item" id="first-cycle"></li>
                <li class="full-chart__list-item"></li>
            </ul>

            <section class="full-chart__container chart-container" id="chart"></section>

            <figcaption class="full-chart__description">
                <ul class="full-chart__list" id="duration-list"></ul>
            </figcaption>
        </figure>

        <div class="full-chart__buttons-container button-container">
            <button class="button-container__item button-container__item_blue"><a href="#task-list">Go to Tasks</a></button>
          <button class="button-container__item button-container__item_green" data-query="saveSetting"><a href="#">Save</a></button>
        </div>
    </article>
</main>
