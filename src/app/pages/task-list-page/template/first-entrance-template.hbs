                        <label for="radio-1" class="radio__label"><span class="radio__inner-round"></span>Education</label>
                    </li>
                    <li class="radio-block__radio">
                        <input type="radio" class="radio" id="radio-2" name="category" value="hobby">
                        <label for="radio-2" class="radio__label"><span class="radio__inner-round"></span>Hobby</label>
                    </li>
                    <li class="radio-block__radio">
                        <input type="radio" class="radio" id="radio-3" name="category" value="sport">
                        <label for="radio-3" class="radio__label"><span class="radio__inner-round"></span>Sport</label>
                    </li>
                    <li class="radio-block__radio">
                        <input type="radio" class="radio" id="radio-4" name="category" value="other">
                        <label for="radio-4" class="radio__label"><span class="radio__inner-round"></span>Other</label>
                    </li>
                </ul>
            </div>

            <label class="modal-window__label">
                Deadline
                <input type="text" class="modal-window__text" placeholder="May 23, 2017" data-name="deadline">
            </label>

            <div class="modal-window__label radio-block radio-block_estimation">
                Estimation
                <ul class="radio-block__list">
                    <li class="radio-block__radio radio-block__radio_filled" data-query="estimation"></li>
                    <li class="radio-block__radio radio-block__radio_filled" data-query="estimation"></li>
                    <li class="radio-block__radio radio-block__radio_filled" data-query="estimation"></li>
                    <li class="radio-block__radio" data-query="estimation"></li>
                    <li class="radio-block__radio" data-query="estimation"></li>
                </ul>
            </div>

            <div class="modal-window__label radio-block radio-block_priority">
                Priority
                <ul class="radio-block__list">
                    <li class="radio-block__radio">
                        <input type="radio" class="radio" id="priority-1" name="priority" value="1">
                        <label for="priority-1" class="radio__label"><span class="radio__inner-round"></span>Urgent</label>
                    </li>
                    <li class="radio-block__radio">
                        <input type="radio" class="radio" id="priority-2" name="priority" value="2">
                        <label for="priority-2" class="radio__label"><span class="radio__inner-round"></span>High</label>
                    </li>
                    <li class="radio-block__radio">
                        <input type="radio" class="radio" id="priority-3" name="priority" value="3">
                        <label for="priority-3" class="radio__label"><span class="radio__inner-round"></span>Middle</label>
                    </li>
                    <li class="radio-block__radio">
                        <input type="radio" class="radio" id="priority-4" name="priority" value="4">
                        <label for="priority-4" class="radio__label"><span class="radio__inner-round"></span>Low</label>
                    </li>
                </ul>
            </div>
        </form>
    </section>
</article>

